package com.eventuror.brainspew.dao;

import java.util.List;

import org.springframework.data.jpa.repository.Query;
import org.springframework.data.repository.CrudRepository;

import com.eventuror.brainspew.dto.ThoughtParent;
import com.eventuror.brainspew.entities.Thought;
 
public interface ThoughtRepository extends CrudRepository<Thought, Long> {
	
	@Override
		List<Thought> findAll();

	@Query(nativeQuery=true, value="SELECT thought_id as thought, description as desc " + 
			"FROM thought")
		public List<ThoughtParent> thoughtParents();
	
	@Query(nativeQuery=true, value="SELECT order_id " + 
			"FROM thought_parent "
			+ "WHERE parent_id=?")
		public int parentOrder();
}